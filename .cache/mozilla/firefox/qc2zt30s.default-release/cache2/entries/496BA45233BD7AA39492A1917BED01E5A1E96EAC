/************************************************************************************
 * ëª¨ë“  ì¡°íšŒì…ë ¥ ê°’ì— ëŒ€í•œ ê²€ì¦ì„ í•¨
   ê´€ë ¨ ì´ë²¤íŠ¸ :  
************************************************************************************/
  function searchCheckData(oForm){

    var blnMore = true;
    var i=0;
    var checkType = 0;
    var nInputCnt = 0;
    var intMaxLen = oForm.elements.length;
  
    while(blnMore && i < intMaxLen){

      if("NT" == oForm.elements[i].chkType || "NN" == oForm.elements[i].chkType || "CT" == oForm.elements[i].chkType || "CN" == oForm.elements[i].chkType){

        // ìˆ«ì ê²€ì¦ì´ë¼ë©´ 
        if('N' == oForm.elements[i].chkType.charAt(0)){

          if(isNaN(oForm.elements[i].value)){
              alert("[" + oForm.elements[i].title + "]ì„(ë¥¼) ìˆ«ìë¡œ ì…ë ¥í•˜ì„¸ìš”.");
              oForm.elements[i].focus();
              blnMore = false;
          } /* end of if condition */

        // ë¬¸ì ê²€ì¦ì´ë¼ë©´
        } else if('C' == oForm.elements[i].chkType.charAt(0)){
          // í•œê¸€ ë¬¸ìì—´ì„ ê³„ì‚°í•˜ì—¬ MaxLengthë³´ë‹¤ í¬ë©´ error message ì¶œë ¥
          if(oForm.elements[i].maxLength < getLength(oForm.elements[i].value)){
            alert("[" + oForm.elements[i].title +"]ì´(ê°€) ìë¦¿ìˆ˜ë¥¼ ì´ˆê³¼ í–ˆìŠµë‹ˆë‹¤.\n\n ë‹¤ì‹œ í™•ì¸í•˜ê³  ì…ë ¥í•˜ì„¸ìš”.");
            oForm.elements[i].focus();
            blnMore = false;
          } /* end of if condition */


        } /* end of if condition */

        // ëª¨ë‘ ì…ë ¥í•˜ì§€ ì•Šì•˜ë‹¤ë©´
        if("" != oForm.elements[i].value){
          nInputCnt++;
        }

      } /* end of if condition */

      i++;
    } /* end of while loop */
    
    if(0 == nInputCnt){
        blnMore = false;
    }

    return blnMore;

  } /* end of checkData() function */


/***********************************************************************
   string length ë¥¼ ë¦¬í„´..
   í•œ : 2, etc : 1
************************************************************************/
function getLength(str)
{
  var len = str.length;
  for (i = 0; i < str.length; i++)
    if (str.charCodeAt(i) > 127)
      len++;
  return len;
}

/************************************************************************
   Textì— ìµœëŒ€ ì…ë ¥ê°€ëŠ¥í•œ ê¸€ììˆ˜ë¥¼ ì§€ì •í•œë‹¤. 
   
   ê¸°ì¡´ Tagì— maxLengthë¼ëŠ” í”„ë¡œí¼í‹°ê°€ ìˆìœ¼ë‚˜ í•œê¸€ í•œë¬¸ìì˜ ê¸¸ì´ë¥¼ 1ë¡œ ì¸ì‹í•¨ìœ¼ë¡œì¨
   ë°ì´í„°ë² ì´ìŠ¤(í•œê¸€ í•œìë¥¼ 2ë°”ì´íŠ¸ë¡œ ì¸ì‹)ì™€ ì„œë¡œ ìƒì´í•¨ìœ¼ë¡œ ì¸í•´ ì˜¤ë¥˜ë¥¼ ì¼ìœ¼í‚¬ ì†Œì§€ê°€
   ìˆë‹¤.
   
   ê´€ë ¨ ì´ë²¤íŠ¸ : onKeyDown
   ê´€ë ¨í•¨ìˆ˜ : getLength(str)

   ì‚¬ìš©ë²• :
   <input type="text" onkeyDown="maxLen(4)"> <- ìµœëŒ€ 4ìë¦¬ ì…ë ¥ê°€ëŠ¥
   
************************************************************************/   
function maxLen(len)
{
  var r = getLength(window.document.selection.createRange().text);
   if ( (event.keyCode == 46) ||  // DEL
       (event.keyCode == 8)  ||  // backspace
       (event.keyCode == 9)  ||  // tab
       (event.keyCode == 35) ||  // HOME key
       (event.keyCode == 36) ||  // END key
       (event.keyCode == 37) ||  // â† key
       (event.keyCode == 38) ||  // â†‘ key
       (event.keyCode == 39) ||  // â†’ key
       (event.keyCode == 40) ||  // â†“ key
       ( (event.keyCode != 229) && (r > 0) )
     )
    event.returnValue=true;
  else if ( getLength(event.srcElement.value) >= len ) 
    event.returnValue=false;
}

