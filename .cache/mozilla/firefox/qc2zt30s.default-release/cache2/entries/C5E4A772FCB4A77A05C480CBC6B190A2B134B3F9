function maxLen(len)
{
  var r = getLength(window.document.selection.createRange().text);
  if ( (event.keyCode == 46) ||  // DEL
       (event.keyCode == 8)  ||  // backspace
       (event.keyCode == 9)  ||  // tab
       (event.keyCode == 35) ||  // HOME key
       (event.keyCode == 36) ||  // END key
       (event.keyCode == 37) ||  // â† key
       (event.keyCode == 38) ||  // â†‘ key
       (event.keyCode == 39) ||  // â†’ key
       (event.keyCode == 40) ||  // â†“ key
       ( (event.keyCode != 229) && (r > 0) )
     )
    event.returnValue=true;
  else if ( getLength(event.srcElement.value) >= len ) 
    event.returnValue=false;
}

 

